<div class="header-top">
  <%= link_to 'マイページ', user_path(current_user), class: "top-link" %>
  <p class="header-icon pl-5" href="/">PORTA</p>
</div>

<div class="header-low">
  <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav active">
        <li class="nav-item">
          <%= link_to 'ポートフォリオ一覧', portfolios_path, class: "nav-item nav-link " %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-item nav-link " %>
        </li>
      </ul>
    </div>
  </nav>
</div>

 <div class="selected-item">
    <a class="selected-title pl-5">ポートフォリオの投稿</a><br />
  </div>


<div class="container px-5">
  <div class="mt-3">
    <%= form_with model: @portfolio, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label "ポートフォリオ名" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "イメージ画像" %><br />
      <%= f.attachment_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "タグ" %><br />
      <%= f.text_field :tag_name, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label "新規登録してもOK?" %> <span class="badge badge-danger">必須</span>
      <%= f.radio_button :signin_ok, :true%>OK
      <%= f.radio_button :signin_ok, :false%>NG
    </div>
    <div class="form-group">
    <%= f.label "ログインしてもOK?" %> <span class="badge badge-danger">必須</span>
      <%= f.radio_button :signup_ok, :true%>OK
      <%= f.radio_button :signup_ok, :false%>NG
    </div>
    <div class="form-group">
    <%= f.label "このサイト外で共有・公開してもOK?" %> <span class="badge badge-danger">必須</span>
      <%= f.radio_button :share_others, :true%>OK
      <%= f.radio_button :share_others, :false%>NG
    </div>
    <div class="form-group">
    <%= f.label "サイト状態（エラーやインスタンスの状態による）" %> <span class="badge badge-danger">必須</span>
      <%= f.radio_button :instance, :true%>閲覧できます
      <%= f.radio_button :instance, :false%>閲覧できません
    </div>

    <div class="form-group">
      <%= f.label "サイトURL" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :site_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "GitHub URL" %><br />
      <%= f.text_field :git_hub_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "スライド、資料等 URL" %><br />
      <%= f.text_field :files, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "制作背景" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :background_story, size: "50x2", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "ターゲット" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :target, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "工夫した点" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :ingenuity_point, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "苦労した点" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :difficult_point, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "学んだこと" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :learn_point, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "今後実装したい機能" %> <span class="badge badge-danger">必須</span><br />
      <%= f.text_field :wanna_install, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "レビュー者に伝えたいこと" %><br />
      <%= f.text_field :remarks, class: "form-control" %>
    </div>

    <%= f.check_box :agreement, :as => :boolean, checked:false %>利用規約とプライバシーポリシーに同意する

    <div class="submit_bottom_group d-flex justify-content-end">
    <%= f.submit "入力内容を送信する", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>