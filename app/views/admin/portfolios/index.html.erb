<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
     <table class="table table-hover">
  　　　<thead>
    　<tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
   　  </tr>
      </thead>
  　　<tbody>
  　　  <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= link_to admin_user_path(user.id) do %><%= user.last_name %><%= user.first_name %><% end %></td>
          <td><%= user.email %></td>
          <td>
            <td>
              <% if user.is_deleted %>
                <p class="text-secondary"><%= "退会" %></p>
              <% else %>
                <p class="text-success"><%= "有効" %></p>
              <% end %>
           </td>
          </td>
        </tr>
        <% end %>
      </tbody>
　　　</table>
    </div>
    <div class="col-2"></div>
  </div>
  <div class="row">
    <div class="col-5"></div>
    <div class="paginate col-4"><%= paginate @users %></div>
    </div>
  </div>
</div>
