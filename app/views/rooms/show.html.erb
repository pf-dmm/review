<div>
  <h1>DM</h1>
</div>

<div>
  <% if @messages.present? %>
    <% @messages.each do |message| %>
      <strong><%= message.content %></strong>
      <small><%= message.created_at %></small>
      <small>by <a href="/users/<%= message.user_id %>"><%= message.user.name %>さん</a></small>
    <% end %>
  <% else %>
    <h3>メッセージはまだありません</h3>
  <% end %>
</div>

<div>
  <%= form_with model: @message do |f| %>
    <%= f.text_field :content, :placeholder => "メッセージを入力してください", :size => 80 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "投稿する" %>
  <% end %>
</div>