<div class="header-top">
  <% if user_signed_in? %>
    <%= link_to 'マイページ', user_path(current_user), class: "top-link" %>
  <% end %>
  <p class="header-icon pl-5" href="/">PORTA</p>
</div>

<div class="header-low">
  <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'ポートフォリオ一覧', portfolios_path, class: "nav-item nav-link " %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-item nav-link " %>
        </li>
      </ul>
    </div>
  </nav>
</div>


  <div class="selected-item">
    <a class="selected-title pl-5">ポートフォリオ一覧</a><br />
    なぜ多くのポートフォリオに触れることが良いのか？を書く
  </div>


  <div class="my-2 mx-5">
    <%= form_tag(portfolios_path, method: :get) do %>
      <%= text_field_tag :search, '',  placeholder: "Search Portfolios", class: "form-control form-control-lg" %>
        <%= submit_tag "検索" %>
    <% end %>
  </div>
    
  <div>
    <ul class="pf-list d-flex justify-content-center pt-5">
      <% @portfolios.each do |portfolio| %>
        <li><%= attachment_image_tag portfolio,:image, fallback: "no-image.png", size:"300x225", class:"fallback" %><br />
        <b><%= portfolio.title %></b><br />
        <%= portfolio.user.name %><br />
        <%= portfolio.created_at.strftime("%Y年%m月%d日") %></li>
      <% end %>
    </ul>
  </div>